<%= form_for(@user, html: { class: 'form-horizontal' }) do |f| %>
  
  <div class="form-group">
    <label >Name (Last Name, First Name and Middle Initial) </label>
    
    <%= f.text_field :name, class: 'form-control' %>
    
  </div>
  
  <div class="form-group">
    <label >Address</label>
    <%= f.text_field :address, class: 'form-control' %> 
  </div>
  
  <div class="form-group">
    <label >City</label>
    <%= f.text_field :city, class: 'form-control' %> 
  </div>

  <div class="form-group">
    <label>State</label>
    <%= f.select(:state, [['Alabama', 'AL'],
      ['Alaska', 'AK'],
      ['Arizona', 'AZ'],
      ['Arkansas', 'AR'],
      ['California', 'CA'],
      ['Colorado', 'CO'],
      ['Connecticut', 'CT'],
      ['Delaware', 'DE'],
      ['District of Columbia', 'DC'],
      ['Florida', 'FL'],
      ['Georgia', 'GA'],
      ['Hawaii', 'HI'],
      ['Idaho', 'ID'],
      ['Illinois', 'IL'],
      ['Indiana', 'IN'],
      ['Iowa', 'IA'],
      ['Kansas', 'KS'],
      ['Kentucky', 'KY'],
      ['Louisiana', 'LA'],
      ['Maine', 'ME'],
      ['Maryland', 'MD'],
      ['Massachusetts', 'MA'],
      ['Michigan', 'MI'],
      ['Minnesota', 'MN'],
      ['Mississippi', 'MS'],
      ['Missouri', 'MO'],
      ['Montana', 'MT'],
      ['Nebraska', 'NE'],
      ['Nevada', 'NV'],
      ['New Hampshire', 'NH'],
      ['New Jersey', 'NJ'],
      ['New Mexico', 'NM'],
      ['New York', 'NY'],
      ['North Carolina', 'NC'],
      ['North Dakota', 'ND'],
      ['Ohio', 'OH'],
      ['Oklahoma', 'OK'],
      ['Oregon', 'OR'],
      ['Pennsylvania', 'PA'],
      ['Puerto Rico', 'PR'],
      ['Rhode Island', 'RI'],
      ['South Carolina', 'SC'],
      ['South Dakota', 'SD'],
      ['Tennessee', 'TN'],
      ['Texas', 'TX'],
      ['Utah', 'UT'],
      ['Vermont', 'VT'],
      ['Virginia', 'VA'],
      ['Washington', 'WA'],
      ['West Virginia', 'WV'],
      ['Wisconsin', 'WI'],
      ['Wyoming', 'WY']], {}, { :class => 'form-control' }) %>
    
  </div>

  <div class="form-group">
    <label >Zip Code</label>
    <%= f.text_field :zipcode, class: 'form-control' %> 
  </div>

  <div class="form-group">
    <label >Date of Birth (yyyy-mm-dd) </label>
    <%= f.text_field :date_of_birth, class: 'form-control datepicker', placeholder: '' %> 
  </div>

  <div class="form-group">
    <label >U.S. Social Security Number </label>
    <%= f.text_field :social_security, class: 'form-control ', placeholder: '' %> 
  </div>

  <div class="form-group">
    <label >E-mail Address </label>
    <%= f.text_field :email, class: 'form-control ', placeholder: '' %> 
  </div>

  <div class="form-group">
    <label >Telephone Number</label>
    <%= f.text_field :telephone, class: 'form-control ', placeholder: '' %> 
  </div>

  <div class="form-group">
    <label>Are you a US Citizen?</label>
    <%= f.label :us_citizen, "Yes", :value => "true"  %>
    <%= f.radio_button :us_citizen, true, :checked => true %>
    <%= f.label :us_citizen, "No", :value => "false" %>
    <%= f.radio_button :us_citizen, false %>
  </div>

  <div class="form-group">
    <label > Mark all that apply</label>
  </div>

  <div class="form-group col-sm-offset-3">
      <%= f.check_box :is_item_a %>     A noncitizen national of the United States <br/>
      <%= f.check_box :is_item_b %>     A lawful permanent resident <br/>
      <%= f.check_box :is_item_c %>     An alien authorized to work until a certain date <br/>
      <br/>
  </div>

<!--   <div class="form-group">
    <label>Combobox</label>    
    <%= f.select(:combobox, [['Option A', 'Option A'], ['Option B', 'Option B'], ['Option C', 'Option C'], ['Option D', 'Option D']], {}, { :class => 'form-control' })  %>
  </div> -->

  <div class="form-actions pull-right">
    <%= link_to 'Cancel', users_path, class: 'btn btn-default' %>
    <button type="Submit" class="btn btn-primary">Save</button>
  </div>
  <br/>
  <br/>
  <br/>
<% end %>
<script type="text/javascript">
    $('.datepicker').datepicker({format: 'yyyy-mm-dd'});
</script>